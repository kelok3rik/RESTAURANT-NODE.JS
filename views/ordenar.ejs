                //         exportOptions: {
                //             modifier: {
                //                 selected: null
                //             }
                //         }
                //     }
                // ],
                //select: true
                responsive: true
            });

            var t = $('#tablaUser').DataTable();
            var counter = 1;

            $('#addRow').on('click', function () {
                t.row.add([counter, counter, counter, counter + '4', counter]).draw(false);


                counter++;



                SumarColumnas();


            });



            function SumarColumnas() {

                var t = $('#tablaUser').DataTable();

                var totalInput = document.getElementById("total");


                // Obtener la columna que queremos sumar
                var column = t.column(2).data();

                // Sumar los valores de la columna utilizando la función reduce
                var total = column.reduce(function (acc, val) {
                    return acc + parseFloat(val);
                }, 0);

                // Imprimir el resultado
                // Cambiar el valor del input
                totalInput.value = total;

            }

        });


        ///////////////////////////////////



    </script>



    <script>
        var searchInput = document.getElementById('search');
        var resultsDiv = document.getElementById('results');

        searchInput.addEventListener('keyup', function () {
            fetch('/search?q=' + searchInput.value)
                .then(function (response) {
                    return response.json();
                })
                .then(function (results) {
                    var html = '';
                    for (var i = 0; i < results.length; i++) {
                        html += '<div>' + results[i].name + '</div>';
                    }
                    resultsDiv.innerHTML = html;
                });
        });
