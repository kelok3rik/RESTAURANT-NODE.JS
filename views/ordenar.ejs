    <script>
        $(document).ready(function () {
            $('#tablaUser').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                },
                // dom: 'Bfrtip',
                // buttons: [
                //     'copy',
