                //     }
                // ],
                //select: true
                responsive: true
            });

            var t = $('#tablaUser').DataTable();
            var counter = 1;

            $('#addRow').on('click', function () {
                t.row.add([counter, counter, counter, counter + '4', counter]).draw(false);


                counter++;



                SumarColumnas();


            });



            function SumarColumnas() {

                var t = $('#tablaUser').DataTable();

                var totalInput = document.getElementById("total");


                // Obtener la columna que queremos sumar
                var column = t.column(2).data();

                // Sumar los valores de la columna utilizando la función reduce
                var total = column.reduce(function (acc, val) {
                    return acc + parseFloat(val);
                }, 0);

                // Imprimir el resultado
                // Cambiar el valor del input
                totalInput.value = total;

            }

        });


        ///////////////////////////////////



    </script>



    <script>
        function autocompletar() {
            const input = document.getElementById("nombre_empleado");
            const sugerenciasDiv = document.getElementById("sugerencias");

            // Envía una petición al servidor Node.js para obtener las sugerencias de autocompletado
            const xhr = new XMLHttpRequest();
            xhr.open("POST", "/autocompletar", true);
            xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
                    sugerenciasDiv.innerHTML = xhr.responseText;
                }
            };
            xhr.send("texto=" + input.value);
        }

        function seleccionarEmpleado(nombre) {
            const nombreInput = document.getElementById("nombre");
            const emailInput = document.getElementById("email");

            // Envía una petición al servidor Node.js para obtener los datos del empleado seleccionado
            const xhr = new XMLHttpRequest();
            xhr.open("POST", "/seleccionarEmpleado", true);
            xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
                    const empleado = JSON.parse(xhr.responseText);
                    // Muestra los datos del empleado en los diferentes inputs
                    nombreInput.value = empleado.nombre;
                    emailInput.value = empleado.email;
                }
            };
            xhr.send("nombre=" + nombre);
        }
    </script>

