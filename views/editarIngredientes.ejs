    <% if(results){ %>
        <div class="container-fluid p-5">
            <div class="card-header">
                <div class="card-header">Editar</div>
                <div class="card-body">
                    <form action="/editarIngredientes" method="POST">
                        <input id="id_ingredientes" name="id_ingredientes" value="<%= results.ID %>" hidden>
                        <div class="mb-3">
                            <label for="ID" class="form-label">NOMBRE</label>
                            <input type="text" class="form-control" id="NOMBRE" name="NOMBRE" value="<%= results.Nombre %>"
                                tabindex="1">
                        </div>
                        <div class="mb-3">
                            <label for="ID" class="form-label">DESCRIPCION</label>
                            <input type="text" class="form-control" id="DESCRIPCION" name="DESCRIPCION" value="<%= results.Descripcion %>"
                                tabindex="1">
                        </div>
                        
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/mantenimientoIngredientes" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
