        <div class="col-md-12 shadow-lg p-2 mb-5 bg-light rounded ">
            <div class="table-responsive table-responsive-sm">

                <a href="/registrarEmpleado" class="btn btn-outline-primary mt-4">
                    <i class="fa-solid fa-plus"></i>
                </a>
                <table id="tablaUser" class="table table-striped table-bordered table-hover ">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th scope="col">NOMBRE</th>
                            <th scope="col">EMAIL</th>
                            <th scope="col">TELEFONO</th>
                            <th scope="col">SALARIO</th>
                            <th scope="col">PUESTO</th>
                            <th scope="col">ACCIONES</th>


                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach((user)=> { %>
                            <tr>
                                <td>
                                    <%= user.Nombre %>
                                </td>
                                <td>
                                    <%= user.Email %>
                                </td>
                                <td>
                                    <%= user.Telefono %>
                                </td>
                                <td>
                                    <%= user.Salario %>
                                </td>
                                <td>
                                    <%= user.Puesto %>
                                </td>

                                <td>
                                    <a href="/editarEmpleado/<%= user.ID_EMPLEADO %>" class="btn btn-outline-info"><i
                                            class="fa-solid fa-pen"></i></a>
                                    <a href="/borrarEmpleado/<%= user.id %>" class="btn btn-outline-danger"><i
                                            class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>

                </table>
            </div>
        </div>

        

